@{
}
@model Cart

@{
    var totalPrice = 0;

} 
<div>
    @foreach (var cartItem in Model.cartItems)
    {
       <div>
      <td>@cartItem.Product.Name</td>
      <br />
            <td>Quantity : @cartItem.Quantity.ToString()</td>
            <br />
      <td>@cartItem.Product.Price.ToString("c")</td>
      <br />
        
        </div>
        totalPrice = totalPrice + cartItem.Product.Price*cartItem.Quantity;

        <form action="/Cart/RemovefromCart/@cartItem.Id" method="post">
            <button type="submit" >Remove from cart</button>
        </form>
    
    }
    
    <br />
    <div>the total price is @totalPrice.ToString("c")</div>
    <br />
    <div><form method="post" action="/Order/SubmitOrder" ><button type="submit">submit Order</button> </form></div>
</div>
